[short-preview]
	<div class="atb">
		<div class="atitle"><h1>{title}</h1></div>
		<div class="pre-at atext">{short-story}</div>
	</div>
[/short-preview]
[full-preview]
	<div class="atb">
		<div class="atitle"><h1>{title}</h1></div>
		<div class="pre-at atext">{full-story}<div class="navigation">{pages}</div></div>
	</div>
[/full-preview]
[static-preview]
	<div class="atb">
		<div class="atitle"><h1>{description}</h1></div>
		<div class="atext">{static}<div class="navigation">{pages}</div></div>
	</div>
[/static-preview]
