	<?php 
	$k=0; $i=0;
	foreach($this->options as $poll_option){ ?>
	<tr class="sectiontableentry2">
		<td>
			<?php echo $poll_option->text; ?>
		</td>
		<td>
			<?php if ($this->params->get('show_hits')) { ?> 
				<?php echo JText::_('Голосов'); echo ":&nbsp;".$poll_option->hits; ?>
			<?php } ?>
		</td>
		<td>
		<?php echo $poll_option->percent; ?>%
		</td>
		<td class="poll_bar">
		<div class="result_<?php echo $i; ?>" style="width:100%; height:20px;">
			<div id="poll_bar<?php echo $i; ?>" style="height:20px; width:<?php echo $poll_option->percent; ?>%; min-width: 1%; float:left; background-color:#<?php echo $poll_option->color ?>; ">
			</div>
			</div>
		</td>
	</tr> 
	<? $k= 1-$k; $i++; ?>
	<?php } ?>
</table>