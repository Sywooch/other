<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.7.0" method="upgrade">
	<name>wst_carousel_thumbnails</name>
	<author>Nenadt and GoranR</author>
	<creationDate>2012-08-30</creationDate>
	<copyright>http://www.webmasterstand.com/</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>nenadt@gmail.com</authorEmail>
	<authorUrl>http://www.webmasterstand.com/</authorUrl>
	<version>1.0</version>
	<description>Simple Flash Carousel Thumbnails Image Gallery</description>
	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
    
    <files folder="site">
        <filename>index.html</filename>
        <filename>wst_carousel_thumbnails.php</filename>
        <filename>controller.php</filename>
        <filename>flashmo_230_photo_list.xml</filename>
        <filename>flashmo_230_carousel.swf</filename>
        <folder>views</folder>
		<folder>models</folder>
        <folder>photos</folder>
    </files>
    
    <administration>
        <menu view="default" img="components/com_wst_carousel_thumbnails/images/wsticon.png">WST_CAROUSEL_THUMBNAILS_MENU_NAME</menu>
        
        <files folder="admin">
            <filename>index.html</filename>
            <filename>wst_carousel_thumbnails.php</filename>
			<filename>controller.php</filename>
            <folder>controllers</folder>
            <folder>css</folder>
            <folder>images</folder>
            <folder>inc</folder>
            <folder>js</folder>
            <folder>language</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
			<folder>views</folder>
        </files>
        <languages folder="admin">
			<language tag="en-GB">language/en-GB.com_wst_carousel_thumbnails.ini</language>
			<language tag="en-GB">language/en-GB.com_wst_carousel_thumbnails.sys.ini</language>
		</languages>
    </administration>
    
    <installfile>install.wst_carousel_thumbnails.php</installfile>
	<uninstallfile>uninstall.wst_carousel_thumbnails.php</uninstallfile>
</extension>