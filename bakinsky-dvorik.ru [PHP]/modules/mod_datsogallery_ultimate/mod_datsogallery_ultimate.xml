<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0" method="upgrade">
	<name>DatsoGallery Ultimate</name>
	<author>Andrey Datso</author>
	<creationDate>01.10.2009</creationDate>
	<copyright>Copyright (C) 2004-2009  Andrey Datso. All rights reserved.</copyright>
	<authorEmail></authorEmail>
	<authorUrl>www.datso.fr</authorUrl>
	<version>1.3</version>
	<description>DATSOGALLERY ULTIMATE DESC</description>
	<files>
		<filename module="mod_datsogallery_ultimate">mod_datsogallery_ultimate.php</filename>
        <filename>index.html</filename>
        <filename>cache.php</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
	</files>
    <languages>
        <language tag="en-GB">languages/en-GB/en-GB.mod_datsogallery_ultimate.ini</language>
        <language tag="ru-RU">languages/ru-RU/ru-RU.mod_datsogallery_ultimate.ini</language>
    </languages>
	<params>
		<param name="catid" type="text" default="0" size="22" label="CATEGORY ID" description="CATEGORY ID DESC" />
        <param name="sort" type="list" default="random" label="SORT" description="SORT DESC">
            <option value="popular">MOST VIEWED</option>
            <option value="rating">TOP RATED</option>
			<option value="lastadd">LAST ADDED</option>
			<option value="lastcomment">LAST COMMENTED</option>
            <option value="random">RANDOM</option>
		</param>
        <param name="image_width" type="text" default="64" size="8" label="IMAGE WIDTH" description="IMAGE WIDTH DESC" />
        <param name="image_height" type="text" default="64" size="8" label="IMAGE HEIGHT" description="IMAGE HEIGHT DESC" />
        <param name="cropratio" type="list" default="1:1" label="CROPRATIO" description="CROPRATIO DESC">
			<option value="1:1">1:1</option>
			<option value="3:2">3:2</option>
		</param>
        <param name="image_quality" type="text" default="90" size="8" label="IMAGE QUALITY" description="IMAGE QUALITY DESC" />
        <param name="border_width" type="text" default="1" size="8" label="BORDER WIDTH" description="BORDER WIDTH DESC" />
        <param name="border_style" type="list" default="solid" label="BORDER STYLE" description="BORDER STYLE DESC">
            <option value="dotted">Dotted</option>
			<option value="dashed">Dashed</option>
            <option value="solid">Solid</option>
            <option value="double">Double</option>
            <option value="groove">Groove</option>
            <option value="ridge">Ridge</option>
            <option value="inset">Inset</option>
            <option value="outset">Outset</option>
        </param>
        <param name="border_color" type="text" default="#D3D3D3" size="8" label="BORDER COLOR" description="BORDER COLOR DESC" />
        <param name="padding" type="text" default="2" size="8" label="PADDING" description="PADDING DESC" />
        <param name="margin" type="text" default="4" size="8" label="MARGIN" description="MARGIN DESC" />
        <param name="bg_color" type="text" default="#FFFFFF" size="8" label="BACKGROUND COLOR" description="BACKGROUND COLOR DESC" />
        <param name="limit" type="text" default="1" size="8" label="COUNT" description="THE NUMBER OF IMAGES TO DISPLAY" />
        <param name="view" type="list" default="dgu_ver" label="CENTERING" description="CENTERING DESC">
            <option value="dgu_ver">VERTICAL</option>
			<option value="dgu_hor">HORIZONTAL</option>
        </param>
        <param name="show_titles" type="radio" default="1" label="SHOW IMAGE TITLES" description="SHOW IMAGE TITLES DESC">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="limit_chars" type="text" default="12" size="8" label="MAX CHARS" description="MAX CHARS DESC" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        <param name="mod_id" type="text" default="1" size="8" label="MODULEID" description="MODULEID DESC" />
        <param name="slideshow" type="radio" default="0" label="SLIDESHOW" description="SLIDESHOW DESC">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="mode" type="list" default="med" label="SLIDESHOW FORMAT" description="SLIDESHOW FORMAT DESC">
			<option value="med">MEDIUMS</option>
			<option value="org">ORIGINALS</option>
        </param>
	</params>
</install>
