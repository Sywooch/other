<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="content">
<name>Content - Russian social bookmarks buttons</name>
<creationDate>11 октября</creationDate>
<author>Сергей Болотов</author>
<authorEmail>sales@webstudio.pro</authorEmail>
<authorUrl>http://webstudio.pro</authorUrl>
<copyright>(c) Webstudio.pro via http://artinblog.ru</copyright>
<license>GNU/GPL 2.0</license>
<description>Кнопка русских соцзакладок. Для вставки в любом месте текста теперь можно использовать тэг {social}</description>
<version>2.1</version>
        <files>
                <filename plugin="rusbuttons">rusbuttons.php</filename>
                <filename plugin="rusbuttons">rusbuttons/set1-24.png</filename>
                <filename plugin="rusbuttons">rusbuttons/set1-32.png</filename>
                <filename plugin="rusbuttons">rusbuttons/set1-48.png</filename>
                <filename plugin="rusbuttons">rusbuttons/set2-24.png</filename>
                <filename plugin="rusbuttons">rusbuttons/set2-32.png</filename>
                <filename plugin="rusbuttons">rusbuttons/set2-48.png</filename>
                <filename plugin="rusbuttons">rusbuttons/odkl_share.js</filename>
        </files>
        	<params>
	<param name="sef" type="radio" default="1" label="Используется ли SEF" description="Выключите, если SEF на сайте отключен">
			<option value="0">Нет</option>
			<option value="1">Да</option>
	</param>
	<param name="iconset" type="imagelist" default="set1-24.png" label="Какой набор иконок использовать" description="Выберите набор иконок" directory="/plugins/content/rusbuttons" exclude="32|48" hide_none="TRUE" hide_default="TRUE" stripext="TRUE" >

	</param>
        <param name="twitter_login" type="text" default="#joomla15" label="Префикс поста в твиттере" description="Например - #joomla15 или RT @volandku" />
        <param name="pretext" type="text" size="40" default="Интересная статья? Поделись ей с другими:" label="Вступительный текст" description="Напишите текст перед иконками" />
	<param name="size" type="radio" default="48" label="Размер иконок" description="Размер иконок социальных закладок">
			<option value="24">24</option>
			<option value="32">32</option>
			<option value="48">48</option>
	</param>
		<param name="shorturl" type="radio" default="0" label="Использовать сокращатель ссылок" description="Использовать ли сокращатель ссылок в Твиттере">
			<option value="0">Нет</option>
			<option value="1">0lv.ru</option>
			<option value="2">j.mp</option>
	</param>
        <param name="background" type="text" default="#FDFFBC" label="Цвет бэкграунда" description="Цвет бэкграунда - используется css-варианты (http://www.joomla15.ru/вертска/копипасты/56-список_цветов_CSS.html)" />
        <param name="padd" type="text" default="10" label="Отступ между кнопками в пикселях" description="Значение отступа между кнопками в пикселях" />
        <param name="border" type="radio" default="1" label="Нужен ли бордер вокруг">
			<option value="0">Скрыть</option>
			<option value="1">Показывать</option>
	</param>
        <param name="showon" type="radio" default="1" label="Показывать кнопки в конце статьи">
			<option value="0">Нет (только по тэгу {social})</option>
			<option value="1">Показывать</option>
	</param>
	<param name="copy" type="radio" default="1" label="Показать ссылку на плагин" description="Показывать ссылку на скачивание плагина">
			<option value="0">Скрыть</option>
			<option value="1">Показывать</option>

	</param>


	</params>
	<params group="advanced">

	</params>
</install>
