<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install version="1.5" type="component" method="upgrade">
  <name>DatsoGallery</name>
  <creationDate>25.11.2009</creationDate>
  <author>Andrey Datso</author>
  <copyright>Copyright 2006-2009 Andrey Datso. Distribution prohibited!</copyright>
  <authorEmail></authorEmail>
  <authorUrl>www.datso.fr</authorUrl>
  <version>1.8.4</version>
  <description><![CDATA[DatsoGallery is a native Joomla! gallery component]]></description>
  	<installfile>install.datsogallery.php</installfile>
	<uninstallfile>uninstall.datsogallery.php</uninstallfile>
	<install>
		<sql folder="admin">
			<file charset="utf8" driver="mysql">install.datsogallery.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql folder="admin">
			<file charset="utf8" driver="mysql">uninstall.datsogallery.sql</file>
		</sql>
	</uninstall>
    <files folder="site">
        <folder>css</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>libraries</folder>
		<file>captcha.php</file>
		<file>datsogallery.php</file>
		<file>router.php</file>
		<file>sub_commentpic.php</file>
		<file>sub_slideshow.php</file>
        <file>sub_viewdetails.php</file>
		<file>sub_viewspecial.php</file>
		<file>sub_wm.php</file>
        <file>index.html</file>
	</files>
    <administration>
    <menu img="components/com_datsogallery/images/dg-logo-icon.png"><![CDATA[DatsoGallery]]></menu>
		<submenu>
			<menu img="components/com_datsogallery/images/dg-images-icon.png" link="option=com_datsogallery"><![CDATA[Images Manager]]></menu>
			<menu img="components/com_datsogallery/images/dg-categories-icon.png" link="option=com_datsogallery&amp;act=showcatg"><![CDATA[Categories Manager]]></menu>
			<menu img="components/com_datsogallery/images/dg-comments-icon.png" link="option=com_datsogallery&amp;act=comments"><![CDATA[Comments Manager]]></menu>
            <menu img="components/com_datsogallery/images/dg-standart-upload-icon.png" link="option=com_datsogallery&amp;act=upload"><![CDATA[Standart Upload]]></menu>
            <menu img="components/com_datsogallery/images/dg-package-upload-icon.png" link="option=com_datsogallery&amp;act=batchupload"><![CDATA[Batch Upload]]></menu>
            <menu img="components/com_datsogallery/images/dg-package-import-icon.png" link="option=com_datsogallery&amp;act=batchimport"><![CDATA[Batch Import]]></menu>
            <menu img="components/com_datsogallery/images/dg-configuration-icon.png" link="option=com_datsogallery&amp;act=settings"><![CDATA[Configuration]]></menu>
            <menu img="components/com_datsogallery/images/dg-reset-votes-icon.png" link="option=com_datsogallery&amp;act=resetvotes"><![CDATA[Reset Votes]]></menu>
            <menu img="components/com_datsogallery/images/dg-thumb-rebuild-icon.png" link="option=com_datsogallery&amp;act=rebuild"><![CDATA[Thumb Rebuild]]></menu>
		</submenu>
    <files folder="admin">
	    	<folder>css</folder>
			<folder>images</folder>
			<file>admin.datsogallery.html.php</file>
            <file>admin.datsogallery.php</file>
            <file>class.datsogallery.php</file>
            <file>config.datsogallery.bak</file>
            <file>images.datsogallery.php</file>
            <file>toolbar.datsogallery.html.php</file>
            <file>toolbar.datsogallery.php</file>
			<file>install.datsogallery.sql</file>
			<file>uninstall.datsogallery.sql</file>
            <file>index.html</file>
	    </files>
    </administration>
</install>
