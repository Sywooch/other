<?xml version="1.0" encoding="utf-8"?>
<install type="plugin" group="system" version="1.5.10" method="update">
	<name>System - No External Links</name>
	<creationDate>Jan 2011</creationDate>
	<author>Kirill Mazur</author>
	<copyright>Copyright (C) 2011 - Kirill Mazur, wmdn.ru</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>wmdn.ru@gmail.com</authorEmail>
	<authorUrl>http://wmdn.ru</authorUrl>
	<version>0.5</version>
	<description>Plugin designed for creating internal links from external</description>
	<files>
		<filename plugin="noexternallinks">noexternallinks.php</filename>
	</files>
	<languages>
		<language tag="ru-RU">ru-RU.plg_system_noexternallinks.ini</language>
		<language tag="en-GB">en-GB.plg_system_noexternallinks.ini</language>
	</languages>
	<params>
		<param name="enable" type="radio" default="0" label="Enable links convert" description="Enable links convert">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="full" type="radio" default="0" label="Full page links convert" description="Full page links convert">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="_blank" type="radio" default="0" label="Add target=_blank" description="Add target=_blank for all links">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="noindex" type="radio" default="0" label="Conclude in noindex" description="Conclude link in noindex">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="nofollow" type="radio" default="0" label="Add rel=nofollow" description="Add rel=nofollow for all links">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param type="textarea" name="exclude_urls" label="White list URL" description="List of excluding urls, each address with a new line"  rows="3" cols="20" />
		<param type="text" name="link_sep" default="goto" label="Link separator" description="For example: http://from.my.site/goto/http://google.com/" />
	</params>
</install>