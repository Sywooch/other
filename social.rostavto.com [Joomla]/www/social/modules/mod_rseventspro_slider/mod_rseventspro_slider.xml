					<option value="1">JYES</option>
				</field>
				
				<field name="desc_length" type="text" default="200" label="MOD_RSEVENTSPRO_SLIDER_DESCRIPTION" description="MOD_RSEVENTSPRO_SLIDER_DESCRIPTION_DESC" />
