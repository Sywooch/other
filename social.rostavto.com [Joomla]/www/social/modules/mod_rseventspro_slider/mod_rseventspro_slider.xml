				<field name="itemid" type="text" default="" label="MOD_RSEVENTSPRO_SLIDER_CUSTOM_ITEMID" description="MOD_RSEVENTSPRO_SLIDER_CUSTOM_ITEMID" />
				
				<field name="layout" type="list" default="default" label="MOD_RSEVENTSPRO_SLIDER_LAYOUT" description="MOD_RSEVENTSPRO_SLIDER_LAYOUT_DESC" >
					<option value="default">MOD_RSEVENTSPRO_SLIDER_LAYOUT_SIMPLE</option>
