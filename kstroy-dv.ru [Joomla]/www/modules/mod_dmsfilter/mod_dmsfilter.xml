<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.0" client="site" method="upgrade">
    <name>mod_dmsfilter</name>
    <author>Misha Datsko</author>
    <version>1.0.1</version>
    <creationDate>May 2014</creationDate>
	<copyright>Copyright (C) 2014. All rights reserved.</copyright>
	<authorEmail>misha@datsko.info</authorEmail>
	<authorUrl>http://datsko.info</authorUrl>
    <description>DMS Virtuemart 2 products filter module.</description>
	<license>GNU General Public License version 2 or later</license>
    <files>
        <filename module="mod_dmsfilter">mod_dmsfilter.php</filename>
        <filename>mod_dmsfilter.xml</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>css/index.html</filename>
        <filename>css/style.css</filename>
        <filename>js/index.html</filename>
        <filename>js/js.js</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <config>
        <fields name="params">
        	<fieldset name="basic">
				<field type="spacer" name="sp_1" label="&lt;b&gt;Title parameters&lt;/b&gt;" />
    		    <field name="title_tag" type="list" default="h3" label="Tag" description="">
					<option value="h1">h1</option>
					<option value="h2">h2</option>
					<option value="h3">h3</option>
					<option value="h4">h4</option>
					<option value="h5">h5</option>
					<option value="h6">h6</option>
				</field>
				<field type="spacer" name="sp_2" hr="true" />
				<field name="show_titles" type="checkbox" label="Show titles" description="Show the title of the properties" value="1" default="1" />
    		    <field name="title_categories" type="text" default="" label="Title categories" description="" />
    		    <field name="title_manufacturers" type="text" default="" label="Title manufacturers" description="" />
    		    <field name="title_prices" type="text" default="" label="Title prices" description="" />
				<field type="spacer" name="sp_3" hr="true" />
				<field name="show_categories" type="checkbox" label="Show categories" description="Show the categories" value="1" default="1" />
				<field name="show_manufacturers" type="checkbox" label="Show manufacturers" description="Show the manufacturers" value="1" default="0" />
				<field name="show_prices" type="checkbox" label="Show prices" description="Show the prices" value="1" default="0" />
				<field type="spacer" name="sp_4" hr="true" />
				<field type="spacer" name="sp_5" label="&lt;b&gt;jQuery parameters&lt;/b&gt;" />
				<field name="jquery" type="checkbox" label="jQuery" description="Use jQuery version 1.10.2" value="1" default="0" />
				<field name="jquerynoconflict" type="checkbox" label="jQuery noConflict" description="Use jQuery noConflict function" value="1" default="0" />
				<field name="jqueryui" type="checkbox" label="jQuery UI" description="Use jQuery UI version 1.10.4" value="1" default="0" />
				<field name="jqueryuicss" type="checkbox" label="jQuery UI css" description="Use jQuery UI style css version 1.10.4" value="1" default="0" />
				<field type="spacer" name="sp_6" hr="true" />
				<field type="spacer" name="sp_7" label="&lt;b&gt;Products parameters&lt;/b&gt;" />
				<field name="prow" type="text" label="Products in a row" description="How much products in a row" value="3" />
				<field name="cbrowse" type="text" label="Class of 'browse-view'" description="Witch in tag class like '.browse-view' put results" value="" default=".browse-view" />
				<field name="inmodal" type="checkbox" label="Modal page" description="View product page in modal" value="1" default="0" />
    		</fieldset>
            <fieldset
    			name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
    	</fields>
    </config>
</extension>
