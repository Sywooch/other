option value="0">No</option>	<option value="1">Yes</option></param><param name="backgroundColor" type="text" default="#FFFFFF" label="Slideshow Bgcolor" description="Flash object background color. For example: #CCCCCC."/><param name="imagewidth" type="text" default="510" label="Images width" description="Images width"/><!--<param name="baseColor" type="text" default="0x92BB38" label="Base color" description="Base color"/>--><param name="gradientColor1" type="text" default="0xE1ED91" label="Gradient Color 1" description="Gradient Color 1"/><param name="gradientColor2" type="text" default="0xAFCB5A" label="Gradient Color 2" description="Gradient Color 2"/><param name="menuColor" type="text" default="0xebf3e0" label="Menu color" description="Menu color"/><param name="menuOverColor" type="text" default="0x7DAA20" label="Menu over color" description="Menu over color"/><param name="menuTextColor" type="text" default="0x21428c" label="Menu text color" description="Menu text color"/><param name="menuOverTextColor" type="text" default="0xffffff" label="Menu text over color" description="Menu text over color"/><param name="transitionTime" type="text" default="1" label="Image Transition Time" description="Transition Time"/><param name="menutransition" type="text" default="0.2" label="Menu transition" description="Menu transition"/><param name="menuScrollSpeed" type="text" default="15" label="Menu scroll speed" description="Menu scroll speed"/><param name="descbox_visible" type="radio" default="yes" label="Show Description Box" description="Show Description Box.">	<option value="yes">Yes</option>	<option value="no">No</option></param><param name="boxwidth" type="text" default="250" label="Box width" description="Box width"/><param name="boxheight" type="text" default="160" label="Box height" description="Box height"/><param name="infoFontSizeBig" type="text" default="16" label="Description big text font size" description="Description big text font size"/><param name="infoFontSizeSmall" type="text" default="12" label="Description small text font size" description="Description small text font size"/><param name="menuFontSize" type="text" default="12" label="Menu font size" description="Menu font size"/><param name="transition_type" type="list" default="fade" label="Image Effect" description="Image transition effect">	<option value="fade">Fade</option>	<option value="easeIn">Ease In</option>	<option value="easeInBounce">Ease in Bounce</option>	<option value="easeInSine">Ease in Sine</option>	<option value="easeInOutCubic">Ease in out Cubic</option>	<option value="easeInOutCirc">Ease in out Circ</option>	<option value="easeInOutElastic">Ease in out Elastic</option></param><param name="transition" type="list" default="left" label="Effect Direction" description="Image effect direction">	<option value="left">Left</option>	<option value="right">Right</option>	<option value="bottom">Bottom</option>	<option value="top">Top</option></param><param name="cornerRadius" type="text" default="55" label="Corner Radius" description="Corner Radius amount"/><param name="box_x" type="text" default="270" label="DescriptionBox X-Position" description="Starting point of box on x-axis"/><param name="box_y" type="text" default="50" label="DescriptionBox Y-Position" description="Ending point of box on y-axis"/><param name="button_width" type="text" default="100" label="Viewmore Button Width" description="Viewmore Button width."/><param name="FindMoreColorBack" type="text" default="0x095373" label="Description background color" description="Description background color"/><param name="FindMoreColorText" type="text" default="0xffffff" label="Description text color" description="Description text color"/><param name="FindMoreAlpha" type="list" default="0.3" label="Description alpha" description="Description alpha"><option value="0">0</option><option value="0.1">0.1</option><option value="0.2">0.2