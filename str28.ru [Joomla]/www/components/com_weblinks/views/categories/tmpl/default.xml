				rows="5"
			/>

			<field name="maxLevelcat" type="list"
				default="-1"
				description="RGLOBAL_MAXIMUM_CATEGORY_LEVELS_DESC"
				label="RGLOBAL_MAXIMUM_CATEGORY_LEVELS_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="-1">RALL</option>
				<option value="1">J1</option>
				<option value="2">J2</option>
