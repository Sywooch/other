<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="com_content_archive_view_default_title" option="com_content_archive_view_default_option">
		<help
			key = "RHELP_MENUS_MENU_element_ARTICLE_ARCHIVED"
		/>
		<message>
			<![CDATA[com_content_archive_view_default_desc]]>
		</message>
	</layout>

	<!-- Add fields to the parameters object for the layout. -->
	<fields name="params">

		<!-- Basic options. -->
		<fieldset name="basic" label="RGLOBAL_ARCHIVE_OPTIONS"
		>

			<field name="orderby_sec" type="list"
				default="alpha"
				description="RGLOBAL_ARTICLE_ORDER_DESC"
				label="RGLOBAL_ARTICLE_ORDER_LABEL"
		>
				<option value="date">RGLOBAL_OLDEST_FIRST</option>
				<option value="rdate">RGLOBAL_MOST_RECENT_FIRST</option>
				<option value="alpha">RGLOBAL_TITLE_ALPHABETICAL</option>
				<option value="ralpha">RGLOBAL_TITLE_REVERSE_ALPHABETICAL</option>
				<option value="author">RGLOBAL_AUTHOR_ALPHABETICAL</option>
				<option value="rauthor">RGLOBAL_AUTHOR_REVERSE_ALPHABETICAL</option>
				<option value="hits">RGLOBAL_MOST_HITS</option>
				<option value="rhits">RGLOBAL_LEAST_HITS</option>
				<option value="order">RGLOBAL_ARTICLE_MANAGER_ORDER</option>
			</field>

			<field name="order_date" type="list"
				default="created"
				description="RGLOBAL_ORDERING_DATE_DESC"
				label="RGLOBAL_ORDERING_DATE_LABEL"
			>
				<option value="created">RGLOBAL_Created</option>
				<option value="modified">RGLOBAL_Modified</option>
				<option value="published">JPUBLISHED</option>
			</field>

			<field name="display_num" type="list"
				default="5"
				description="RGLOBAL_NUMBER_elementS_LIST_DESC"
				label="RGLOBAL_NUMBER_elementS_LIST_LABEL"
			>
				<option value="5">J5</option>
				<option value="10">J10</option>
				<option value="15">J15</option>
				<option value="20">J20</option>
				<option value="25">J25</option>
				<option value="30">J30</option>
				<option value="50">J50</option>
				<option value="100">J100</option>
				<option value="0">RALL</option>
			</field>

			<field name="filter_field" type="list"
				default="hide"
				description="RGLOBAL_FILTER_FIELD_DESC"
				label="RGLOBAL_FILTER_FIELD_LABEL"
			>
				<option value="hide">JHIDE</option>
				<option value="title">RGLOBAL_TITLE</option>
				<option value="author">JAUTHOR</option>
				<option value="hits">RGLOBAL_HITS</option>
			</field>

			<field name="introtext_limit" type="text" default="100"
					label="RGLOBAL_ARCHIVE_ARTICLES_FIELD_INTROTEXTLIMIT_LABEL"
					description="RGLOBAL_ARCHIVE_ARTICLES_FIELD_INTROTEXTLIMIT_DESC" />

		</fieldset>

		<!-- Articles options. -->
		<fieldset name="articles"
			label="COM_CONTENT_ATTRIBS_ARTICLE_SETTINGS_LABEL"
		>

			<field name="show_category" type="list"
				description="RGLOBAL_SHOW_CATEGORY_DESC"
				label="RGLOBAL_SHOW_CATEGORY_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="link_category" type="list"
				description="RGLOBAL_LINK_CATEGORY_DESC"
				label="RGLOBAL_LINK_CATEGORY_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JNo</option>
				<option value="1">JYes</option>
			</field>

		<field
			name="show_parent_category"
			type="list"
			label="RGLOBAL_SHOW_PARENT_CATEGORY_LABEL"
			description="RGLOBAL_SHOW_PARENT_CATEGORY_DESC">
			<option	value="">RGLOBAL_USE_GLOBAL</option>
			<option	value="0">JHIDE</option>
			<option	value="1">JSHOW</option>
		</field>

		<field
			name="link_parent_category"
			type="list"
			label="RGLOBAL_LINK_PARENT_CATEGORY_LABEL"
			description="RGLOBAL_LINK_PARENT_CATEGORY_DESC">
			<option value="">RGLOBAL_USE_GLOBAL</option>
			<option	value="0">RNO</option>
			<option	value="1">RYES</option>
		</field>

			<field name="link_titles" type="list"
				description="RGLOBAL_LINKED_TITLES_DESC"
				label="RGLOBAL_LINKED_TITLES_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">RNO</option>
				<option value="1">RYES</option>
			</field>

			<field name="show_intro" type="list"
				description="RGLOBAL_SHOW_INTRO_DESC"
				label="RGLOBAL_SHOW_INTRO_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="show_author" type="list"
				description="RGLOBAL_SHOW_AUTHOR_DESC"
				label="RGLOBAL_SHOW_AUTHOR_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field
			name="link_author"
			type="list"
			label="RGLOBAL_LINK_AUTHOR_LABEL"
			description="RGLOBAL_LINK_AUTHOR_DESC"
			>
				<option	value="">RGLOBAL_USE_GLOBAL</option>
				<option	value="0">RNO</option>
				<option	value="1">RYES</option>
			</field>

			<field name="show_create_date" type="list"
				description="RGLOBAL_SHOW_CREATE_DATE_DESC"
				label="RGLOBAL_SHOW_CREATE_DATE_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="show_modify_date" type="list"
				description="RGLOBAL_SHOW_MODIFY_DATE_DESC"
				label="RGLOBAL_SHOW_MODIFY_DATE_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="show_publish_date" type="list"
				description="RGLOBAL_SHOW_PUBLISH_DATE_DESC"
				label="RGLOBAL_SHOW_PUBLISH_DATE_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>


			<field name="show_element_navigation" type="list"
				description="RGLOBAL_SHOW_NAVIGATION_DESC"
				label="RGLOBAL_SHOW_NAVIGATION_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>

			<field name="show_hits" type="list"
				description="RGLOBAL_SHOW_HITS_DESC"
				label="RGLOBAL_SHOW_HITS_LABEL"
			>
				<option value="">RGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>

	</fields>
</metadata>
