<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install main "http://www.retina-studio.ru/xml/dtd/1.5/module-install.dtd">
<install type="module" version="1.5.0">
    <name>mod_retinashop_product</name>
    <creationDate>February 2011</creationDate>
    <author>The retinashop Development Team</author>
    <authorUrl>http://www.retinashop.net</authorUrl>
    <copyright>Copyright (C) 2004-2011 retinashop Team. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>2.0.0RC3</version>
    <description>MOD_RETINASHOP_PRODUCT_DESC</description>
    <files>
	<filename module="mod_retinashop_product">mod_retinashop_product.php</filename>
	<filename>index.html</filename>
	<filename>helper.php</filename>
	<filename>tmpl/default.php</filename>
	<filename>tmpl/default2.php</filename>
	<filename>tmpl/default3.php</filename>
	<filename>tmpl/index.html</filename>
    </files>
    <params addpath="/admin/components/com_retinashop/elements">
	<param	name="layout" type="filelist" label="MOD_RETINASHOP_PRODUCT_LAYOUT"
             	description="MOD_RETINASHOP_PRODUCT_LAYOUT_DESC"
             	directory="/modules/mod_retinashop_product/tmpl"
             	default="default" hide_default="1" hide_none="1"
             	stripext="1" filter="\.php$" exclude="^_" />

	<param name="product_group" type="list" default="featured"
			label="MOD_RETINASHOP_PRODUCT_DISPLAY"
			description="MOD_RETINASHOP_PRODUCT_DISPLAY_DESC">
	    <option value="featured">MOD_RETINASHOP_PRODUCT_FEATURED_PRODUCTS</option>
	    <option value="latest">MOD_RETINASHOP_PRODUCT_LATEST_PRODUCTS</option>
	    <option value="random">MOD_RETINASHOP_PRODUCT_RANDOM_PRODUCTS</option>
	    <option value="topten">MOD_RETINASHOP_PRODUCT_BEST_SALES</option>
	</param>
	<param name="max_elements" type="text" default="2"
			label="MOD_RETINASHOP_PRODUCT_MAX_elementS"
			description="MOD_RETINASHOP_PRODUCT_MAX_elementS_DESC" />
	<param name="products_per_row" type="text" default="1"
			label="MOD_RETINASHOP_PRODUCT_PRODUCTS_PER_ROW"
			description="MOD_RETINASHOP_PRODUCT_PRODUCTS_PER_ROW_DESC" />
	<param name="display_style" type="list" default="list"
			label="MOD_RETINASHOP_PRODUCT_DISPLAY_STYLE"
			description="MOD_RETINASHOP_PRODUCT_DISPLAY_STYLE_DESC">
	    <option value="list">MOD_RETINASHOP_PRODUCT_DISPLAY_UL</option>
	    <option value="div">MOD_RETINASHOP_PRODUCT_DISPLAY_DIV</option>
	</param>
	<param name="show_price" type="list" default="1"
			label="MOD_RETINASHOP_PRODUCT_SHOW_PRICE"
			description="MOD_RETINASHOP_PRODUCT_SHOW_PRICE_DESC">
	    <option value="1">Yes</option>
	    <option value="0">No</option>
	</param>
	<param name="show_addtocart" type="list" default="1"
			label="MOD_RETINASHOP_PRODUCT_SHOW_ADDTOCART"
			description="MOD_RETINASHOP_PRODUCT_SHOW_ADDTOCART_DES">
	    <option value="1">Yes</option>
	    <option value="0">No</option>
	</param>
	<param name="@spacer" type="spacer" default="" label="" description="" />
	<param name="headerText" type="textarea" cols="40" rows="3" default=""
			label="MOD_RETINASHOP_PRODUCT_HEADER_TEXT"
			description="MOD_RETINASHOP_PRODUCT_HEADER_TEXT_DESC" />
	<param name="footerText" type="textarea" cols="40" rows="3" default=""
			label="MOD_RETINASHOP_PRODUCT_FOOTER_TEXT"
			description="MOD_RETINASHOP_PRODUCT_FOOTER_TEXT_DESC" />
	<param name="filter_category" type="list" default="0"
			label="MOD_RETINASHOP_PRODUCT_FILTER_CATEGORY"
			description="MOD_RETINASHOP_PRODUCT_FILTER_CATEGORY_DESC">
	    <option value="1">Yes</option>
	    <option value="0">No</option>
	</param>
	<param name="retinashop_category_id" type="rscategories"  value_field="category_name" label="MOD_RETINASHOP_PRODUCT_CATEGORY_ID" description="MOD_RETINASHOP_PRODUCT_CATEGORY_ID_DESC" />

    </params>
    <params group="advanced">
	<param name="cache" type="radio" default="0"
			label="Enable Cache"
			description="Select whether to cache the content of this module">
	    <option value="0">No</option>
	    <option value="1">Yes</option>
	</param>
	<param name="moduleclass_sfx" type="text" default=""
			label="Module Class Suffix"
			description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
	<param name="class_sfx" type="text" default=""
			label="Menu Class Suffix"
			description="A suffix to be applied to the css class of the menu elements" />
    </params>

    <config>
	<fields name="params">
	    <fieldset name="basic" addfieldpath="/admin/components/com_retinashop/elements">
		<field	name="layout" type="filelist" label="MOD_RETINASHOP_PRODUCT_LAYOUT"
             	description="MOD_RETINASHOP_PRODUCT_LAYOUT_DESC"
             	directory="/modules/mod_retinashop_product/tmpl"
             	default="default" hide_default="1" hide_none="1"
             	stripext="1" filter="\.php$" exclude="^_" />
		<field name="product_group" type="list" default="featured"
			label="MOD_RETINASHOP_PRODUCT_DISPLAY"
			description="MOD_RETINASHOP_PRODUCT_DISPLAY_DESC">
		    <option value="featured">MOD_RETINASHOP_PRODUCT_FEATURED_PRODUCTS</option>
		    <option value="latest">MOD_RETINASHOP_PRODUCT_LATEST_PRODUCTS</option>
		    <option value="random">MOD_RETINASHOP_PRODUCT_RANDOM_PRODUCTS</option>
		    <option value="topten">MOD_RETINASHOP_PRODUCT_BEST_SALES</option>
		</field>
		<field name="max_elements" type="text" default="2"
			label="MOD_RETINASHOP_PRODUCT_MAX_elementS"
			description="MOD_RETINASHOP_PRODUCT_MAX_elementS_DESC" />
		<field name="products_per_row" type="text" default="1"
			label="MOD_RETINASHOP_PRODUCT_PRODUCTS_PER_ROW"
			description="MOD_RETINASHOP_PRODUCT_PRODUCTS_PER_ROW_DESC" />
		<field name="display_style" type="list" default="list"
			label="MOD_RETINASHOP_PRODUCT_DISPLAY_STYLE"
			description="MOD_RETINASHOP_PRODUCT_DISPLAY_STYLE_DESC">
		    <option value="list">MOD_RETINASHOP_PRODUCT_DISPLAY_UL</option>
		    <option value="div">MOD_RETINASHOP_PRODUCT_DISPLAY_DIV</option>
		</field>
		<field name="show_price" type="list" default="1"
			label="MOD_RETINASHOP_PRODUCT_SHOW_PRICE"
			description="MOD_RETINASHOP_PRODUCT_SHOW_PRICE_DESC">
		    <option value="1">RYES</option>
		    <option value="0">RNO</option>
		</field>
		<field name="show_addtocart" type="list" default="1"
			label="MOD_RETINASHOP_PRODUCT_SHOW_ADDTOCART"
			description="MOD_RETINASHOP_PRODUCT_SHOW_ADDTOCART_DESC">
		    <option value="1">RYES</option>
		    <option value="0">RNO</option>
		</field>
		<field name="@spacer" type="spacer" default="" label="" description="" />
		<field name="headerText" type="text" default=""
			label="MOD_RETINASHOP_PRODUCT_HEADER_TEXT"
			description="MOD_RETINASHOP_PRODUCT_HEADER_TEXT_DESC" />
		<field name="footerText" type="text" default=""
			label="MOD_RETINASHOP_PRODUCT_FOOTER_TEXT"
			description="MOD_RETINASHOP_PRODUCT_FOOTER_TEXT_DESC" />
		<field name="filter_category" type="list" default="0"
			label="MOD_RETINASHOP_PRODUCT_FILTER_CATEGORY"
			description="MOD_RETINASHOP_PRODUCT_FILTER_CATEGORY_DESC">
		    <option value="1">RYES</option>
		    <option value="0">RNO</option>
		</field>
		<field name="retinashop_category_id" type="rscategories"  value_field="category_name" label="MOD_RETINASHOP_PRODUCT_CATEGORY_ID" description="MOD_RETINASHOP_PRODUCT_CATEGORY_ID_DESC" />

	    </fieldset>
	    <fieldset name="advanced">
		<field name="cache" type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
		    <option value="0">RNO</option>
		    <option value="1">RYES</option>
		</field>
		<field name="moduleclass_sfx" type="text" default=""
			label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
		<field name="class_sfx" type="text" default=""
			label="Menu Class Suffix"
			description="A suffix to be applied to the css class of the menu elements" />
	    </fieldset>
	</fields>
    </config>
</install>
