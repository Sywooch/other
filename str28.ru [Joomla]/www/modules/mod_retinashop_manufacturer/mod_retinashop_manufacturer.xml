<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install main "http://dev.retina.org/xml/dtd/1.5/module-install.dtd">
<install type="module" version="1.5.0">
    <name>mod_retinashop_manufacturer</name>
    <creationDate>February 2011</creationDate>
    <author>The retinashop Development Team</author>
    <authorUrl>http://www.retinashop.net</authorUrl>
    <copyright>Copyright (C) 2004-2011 retinashop Team. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>2.0.0RC3</version>
    <description>MOD_RETINASHOP_MANUFACTURER_DESC</description>
    <files>
        <filename module="mod_retinashop_manufacturer">mod_retinashop_manufacturer.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <params>
        <param name="show" type="list" default="all"
			label="MOD_RETINASHOP_MANUFACTURER_SHOW"
			description="MOD_RETINASHOP_MANUFACTURER_SHOW_DESC">
            <option value="all">MOD_RETINASHOP_MANUFACTURER_IMAGE_NAME</option>
            <option value="image">MOD_RETINASHOP_MANUFACTURER_THUMB_IMAGE</option>
            <option value="text">MOD_RETINASHOP_MANUFACTURER_NAME</option>
        </param>
        <param name="display_style" type="list" default="list"
			label="MOD_RETINASHOP_MANUFACTURER_DISPLAY_STYLE"
			description="MOD_RETINASHOP_MANUFACTURER_DISPLAY_STYLE_DESC">
            <option value="list">MOD_RETINASHOP_MANUFACTURER_LIST</option>
            <option value="div">MOD_RETINASHOP_MANUFACTURER_DIV</option>
        </param>
        <param name="manufacturers_per_row" type="text" default=""
			label="MOD_RETINASHOP_MANUFACTURER_ROW"
			description="MOD_RETINASHOP_MANUFACTURER_ROW_DESC" />
        <param name="@spacer" type="spacer" default="" label="" description="" />
        <param name="headerText" type="textarea" cols="40" rows="3" default=""
			label="MOD_RETINASHOP_MANUFACTURER_HEADER_TEXT"
			description="MOD_RETINASHOP_MANUFACTURER_HEADER_TEXT_DESC" />
        <param name="footerText" type="textarea" cols="40" rows="3" default=""
			label="MOD_RETINASHOP_MANUFACTURER_FOOTER_TEXT"
			description="MOD_RETINASHOP_MANUFACTURER_FOOTER_TEXT_DESC" />
    </params>
    <params group="advanced">
        <param name="cache" type="radio" default="0"
			label="Enable Cache"
			description="Select whether to cache the content of this module">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </param>
        <param name="moduleclass_sfx" type="text" default=""
			label="Module Class Suffix"
			description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
        <param name="class_sfx" type="text" default=""
			label="Menu Class Suffix"
			description="A suffix to be applied to the css class of the menu elements" />
    </params>

    <config>
        <fields name = "params">
            <fieldset name="basic">
                <field name="show" type="list" default="all"
			label="MOD_RETINASHOP_MANUFACTURER_SHOW"
			description="MOD_RETINASHOP_MANUFACTURER_SHOW_DESC">
                    <option value="all">MOD_RETINASHOP_MANUFACTURER_IMAGE_NAME</option>
                    <option value="image">MOD_RETINASHOP_MANUFACTURER_THUMB_IMAGE</option>
                    <option value="text">MOD_RETINASHOP_MANUFACTURER_NAME</option>
                </field>
                <field name="display_style" type="list" default="list"
			label="MOD_RETINASHOP_MANUFACTURER_DISPLAY_STYLE"
			description="MOD_RETINASHOP_MANUFACTURER_DISPLAY_STYLE_DESC">
                    <option value="list">MOD_RETINASHOP_MANUFACTURER_LIST</option>
                    <option value="div">MOD_RETINASHOP_MANUFACTURER_DIV</option>
                </field>
                <field name="manufacturers_per_row" type="text" default=""
			label="MOD_RETINASHOP_MANUFACTURER_ROW"
			description="MOD_RETINASHOP_MANUFACTURER_ROW_DESC" />
                <field name="@spacer" type="spacer" default="" label="" description="" />
                <field name="headerText" type="textarea" cols="40" rows="3" default=""
			label="MOD_RETINASHOP_MANUFACTURER_HEADER_TEXT"
			description="MOD_RETINASHOP_MANUFACTURER_HEADER_TEXT_DESC" />
                <field name="footerText" type="textarea" cols="40" rows="3" default=""
			label="MOD_RETINASHOP_MANUFACTURER_FOOTER_TEXT"
			description="MOD_RETINASHOP_MANUFACTURER_FOOTER_TEXT_DESC" />
            </fieldset>
            <fieldset group="advanced">
               <field name="cache" type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
				>
                    <option value="0">RNO</option>
                    <option value="1">RYES</option>
                </field>
                <field name="moduleclass_sfx" type="text" default=""
			label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                <field name="class_sfx" type="text" default=""
			label="Menu Class Suffix"
			description="A suffix to be applied to the css class of the menu elements" />
            </fieldset>
        </fields>
    </config>
</install>
