<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="rspayment" >
    <name>rsPAYMENT_PAYPAL</name>
    <creationDate>April 2012</creationDate>
    <author>The retinashop Development Team</author>
    <authorUrl>http://www.retinashop.net</authorUrl>
    <copyright>Copyright (C) 2004-2011 retinashop Team. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>2.0.6</version>
    <description><![CDATA[<a href="http://paypal.com" target="_blank">PayPal</a> is a popular
	payment provider and available in many countries. ]]>
    </description>

    <files>
	<filename plugin="paypal">paypal.php</filename>
    </files>
    <languages>
	<language tag="en-GB">en-GB.plg_rspayment_paypal.ini</language>
    </languages>
    <params addpath="/admin/components/com_retinashop/elements">
	<param type="rsjpluginwarning" />
	<param type="spacer" default="rsPAYMENT_PAYPAL_PAYMENT_TITLE" level="level1" />
	<param type="spacer" default="rsPAYMENT_PAYPAL_PAYMENT_WARNING"   />

	<param type="spacer" default="" level="level1" />
	<param type="spacer" default="rsPAYMENT_PAYPAL_PAYMENT_SETTINGS" level="level1" />
	<param	name="payment_logos" type="rsfiles" label="rsPAYMENT_PAYPAL_LOGOS"
             	description="rsPAYMENT_PAYPAL_LOGOS_DESC"
             	directory="/images/stories/retinashop/payment"
             	default="default" hide_default="1" hide_none="1"
             	stripext="0"  exclude="^_" />

	<param type="spacer" default="" level="level1" />
	<param   type="spacer" default="rsPAYMENT_PAYPAL_PARAMS" level="level1" />
	<param type="text" name="paypal_merchant_email"  size="50" label="rsPAYMENT_PAYPAL_EMAIL"
             default="your-PayPal-Merchant-email@domain.com" description="rsPAYMENT_PAYPAL_EMAIL_DESC" />

	<param name="paypal_verified_only" type="radio" default="0" label="rsPAYMENT_PAYPAL_ONLYVERIFIED" description="rsPAYMENT_PAYPAL_ONLYVERIFIED_EXPLAIN">
	    <option value="0">COM_RETINASHOP_NO</option>
	    <option value="1">COM_RETINASHOP_YES</option>
	</param>
	<param name="sandbox_merchant_email" type="text" size="50" default="your-PayPal-Sandbox-Merchant-email@domain.com" label="rsPAYMENT_PAYPAL_SANDBOX_MERCHANT" description="rsPAYMENT_PAYPAL_SANDBOX_MERCHANT_DESC" />
	<param name="sandbox" type="radio" default="1" label="rsPAYMENT_PAYPAL_SANDBOX" description="rsPAYMENT_PAYPAL_SANDBOX_DESC" >
	    <option value="0">COM_RETINASHOP_NO</option>
	    <option value="1">COM_RETINASHOP_YES</option>
	</param>
	<param type="spacer" default="" level="level1" />
	<param type="spacer" default="" level="level1" />
	<param type="spacer" default="rsPAYMENT_PAYPAL_AUTOMATIC_FILLOUT" level="level1" />
	<param name="address_override" type="list" default="0" label="rsPAYMENT_PAYPAL_ADDRESS_OVERRIDE" description="rsPAYMENT_PAYPAL_ADDRESS_OVERRIDE_DESC" >
	    <option value="0">COM_RETINASHOP_NO</option>
	    <option value="1">COM_RETINASHOP_YES</option>
	</param>
	<param name="no_shipping" type="list" default="0" label="rsPAYMENT_PAYPAL_NO_SHIPPING" description="rsPAYMENT_PAYPAL_NO_SHIPPING_DESC" >
	    <option value="0">rsPAYMENT_PAYPAL_NO_SHIPPING_PROMPT</option>
	    <option value="1">rsPAYMENT_PAYPAL_NO_SHIPPING_DO_NOT_PROMPT</option>
	    <option value="2">rsPAYMENT_PAYPAL_NO_SHIPPING_PROMPT_REQUIRE</option>
	</param>
	<param type="spacer" default="" level="level1" />
	<param type="spacer" default="rsPAYMENT_PAYPAL_RESTRICTIONS" level="level1" />
	     <!-- BY DEFAULT paypal currency= vendor currency -->
	<param name="payment_currency" type="rsacceptedcurrency" default="" label="rsPAYMENT_PAYPAL_CURRENCY" description="rsPAYMENT_PAYPAL_CURRENCY_DESC" />

	<param name="countries" type="rscountries"  scope="com_retinashop" default="" label="rsPAYMENT_PAYPAL_COUNTRIES" description="rsPAYMENT_PAYPAL_COUNTRIES_DESC"/>
	<param name="min_amount" type="text"  label="rsPAYMENT_PAYPAL_MIN_AMOUNT" description="rsPAYMENT_PAYPAL_MIN_AMOUNT_EXPLAIN" />
	<param name="max_amount" type="text"  label="rsPAYMENT_PAYPAL_MAX_AMOUNT" description="rsPAYMENT_PAYPAL_MAX_AMOUNT_EXPLAIN" />
	<param name="cost_per_transaction" type="text"  label="rsPAYMENT_PAYPAL_COST_PER_TRANSACTION" description="rsPAYMENT_PAYPAL_COST_PER_TRANSACTION_EXPLAIN" />
	<param name="cost_percent_total" type="text"  label="rsPAYMENT_PAYPAL_COST_PERCENT_TOTAL" description="rsPAYMENT_PAYPAL_COST_PERCENT_TOTAL_EXPLAIN" />
	<param name="tax_id" type="rstaxes" scope="com_retinashop"  label="rsPAYMENT_PAYPAL_TAX" description="rsPAYMENT_PAYPAL_TAX_EXPLAIN" />
	<param type="spacer" default="" level="level1" />
	<param type="spacer" default="rsPAYMENT_PAYPAL_PAYMENT_PAGE" level="level1" />
	<param name="status_pending" type="rsorderstate" scope="com_retinashop" default="P" label="rsPAYMENT_PAYPAL_STATUS_PENDING" description="rsPAYMENT_PAYPAL_STATUS_PENDING_EXPLAIN" />
	<param name="status_success" type="rsorderstate" scope="com_retinashop" default="C" label="rsPAYMENT_PAYPAL_STATUS_SUCCESS" description="rsPAYMENT_PAYPAL_STATUS_SUCCESS_EXPLAIN" />
	<param name="status_canceled" type="rsorderstate" scope="com_retinashop" default="X" label="rsPAYMENT_PAYPAL_STATUS_FAILED" description="rsPAYMENT_PAYPAL_STATUS_FAILED_EXPLAIN" />
	<param type="spacer" default="" level="level1" />
	<param name="debug" type="radio" default="0" label="rsPAYMENT_PAYPAL_DEBUG" description="rsPAYMENT_PAYPAL_DEBUG_DESC" >
	    <option value="0">COM_RETINASHOP_NO</option>
	    <option value="1">COM_RETINASHOP_YES</option>
	</param>

    </params>


</install>
