<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="rspayment" method="upgrade">
    <name>rs - Payment, PayZen</name>
    <creationDate>April 2012</creationDate>
    <author>Lyra Network</author>
    <authorEmail>support@payzen.eu</authorEmail>
    <authorUrl>http://www.lyra-network.com</authorUrl>
    <copyright>Copyright Lyra Network.</copyright>
    <license></license>
    <version>2.0.6</version>
    <description>
    	<![CDATA[<a href="http://www.lyra-network.com" target="_blank">PayZen</a> is a multi bank payment provider. ]]>
    </description>

    <files>
	<filename plugin="payzen">payzen.php</filename>
	<folder>payzen</folder>
    </files>

    <languages>
	<language tag="en-GB">languageBE/en-GB.plg_rspayment_payzen.ini</language>
	<language tag="fr-FR">languageBE/fr-FR.plg_rspayment_payzen.ini</language>
    </languages>

    <media folder="images" destination="../images/stories/retinashop/payment">
	<filename>PayZen.png</filename>
    </media>

    <params addpath="/plugins/rspayment/payzen/elements" />
    <params addpath="/plugins/rspayment/payzen/payzen/elements" />

    <params addpath="/admin/components/com_retinashop/elements">
	<param type="rsjpluginwarning" />
	<param type="spacer" default="rsPAYMENT_PAYZEN_MODULE_INFORMATION_TITLE" level="level1" />
	<param type="spacer" default="rsPAYMENT_PAYZEN_MODULE_INFORMATION" level="level1" />

	<param name="developed_by" type="payzenlabel" label="rsPAYMENT_PAYZEN_DEVELOPED_BY" default="&lt;a href=&quot;http://www.lyra-network.com/&quot; target=&quot;_blank&quot;&gt;Lyra network&lt;/a&gt;"/>
	<param name="contact_email" type="payzenlabel" label="rsPAYMENT_PAYZEN_CONTACT_EMAIL" default="&lt;a href=&quot;mailto:support@payzen.eu&quot;&gt;support@payzen.eu&lt;/a&gt;"/>
	<param name="contrib_version" type="payzenlabel" label="rsPAYMENT_PAYZEN_CONTRIB_VERSION" default="1.2"/>
	<param name="gateway_version" type="payzenlabel" label="rsPAYMENT_PAYZEN_GATEWAY_VERSION" default="V2"/>
	<param name="cms_version" type="payzenlabel" label="rsPAYMENT_PAYZEN_CMS_VERSION" default="retinashop 2.0.3"/>
	<param name="documentation" type="payzenlabel" label="rsPAYMENT_PAYZEN_DOC" default="&lt;a href=&quot;http://media.payzen.eu/documentation_support/retinashop_2.pdf&quot; target=&quot;_blank&quot;&gt;Documentation&lt;/a&gt;"/>/>

	<param type="spacer" default="rsPAYMENT_PAYZEN_PAYMENT_MODULE_SETTINGS" level="level1" />
	<param	name="payment_logos" type="rsfiles" label="rsPAYMENT_PAYZEN_LOGOS"
		description="rsPAYMENT_PAYZEN_LOGOS_DESC"
		directory="/images/stories/retinashop/payment"
		default="payzen.jpg" hide_default="1" hide_none="1"
		stripext="0" exclude="^_" />
	<param name="cost_per_transaction" type="text" label="rsPAYMENT_PAYZEN_COST_PER_TRANSACTION" description="rsPAYMENT_PAYZEN_COST_PER_TRANSACTION_DESC" />
	<param name="cost_percent_total" type="text" label="rsPAYMENT_PAYZEN_COST_PERCENT_TOTAL" description="rsPAYMENT_PAYZEN_COST_PERCENT_TOTAL_DESC" />
	<param name="tax_id" type="rstaxes" scope="com_retinashop"  label="rsPAYMENT_PAYZEN_TAX" description="rsPAYMENT_PAYZEN_TAX_DESC" />

	<param type="spacer" default="rsPAYMENT_PAYZEN_PAYMENT_GATEWAY_ACCESS" level="level1" />

	<param name="site_id" type="text" size="10" default="56790135" label="rsPAYMENT_PAYZEN_SITE_ID" description="rsPAYMENT_PAYZEN_SITE_ID_DESC"/>
	<param name="key_test" type="text" size="20" default="9827035662780440" label="rsPAYMENT_PAYZEN_TEST_KEY" description="rsPAYMENT_PAYZEN_TEST_KEY_DESC"/>
	<param name="key_prod" type="text" size="20" default="" label="rsPAYMENT_PAYZEN_PROD_KEY" description="rsPAYMENT_PAYZEN_PROD_KEY_DESC"/>
	<param name="ctx_mode" type="radio" default="TEST" label="rsPAYMENT_PAYZEN_CTX_MODE" description="rsPAYMENT_PAYZEN_CTX_MODE_DESC">
	    <option value="TEST">rsPAYMENT_PAYZEN_TEST</option>
	    <option value="PRODUCTION">rsPAYMENT_PAYZEN_PRODUCTION</option>
	</param>
	<param name="platform_url" type="text" size="50" default="https://secure.payzen.eu/vads-payment/" label="rsPAYMENT_PAYZEN_PLATFORM_URL" description="rsPAYMENT_PAYZEN_PLATFORM_URL_DESC"/>

	<param type="spacer" default="rsPAYMENT_PAYZEN_PAYMENT_PAGE" level="level1" />

	<param name="language" type="list" default="fr" label="rsPAYMENT_PAYZEN_LANGUAGE" description="rsPAYMENT_PAYZEN_LANGUAGE_DESC">
	    <option value="fr">rsPAYMENT_PAYZEN_FRENCH</option>
	    <option value="de">rsPAYMENT_PAYZEN_GERMAN</option>
	    <option value="en">rsPAYMENT_PAYZEN_ENGLISH</option>
	    <option value="es">rsPAYMENT_PAYZEN_SPANISH</option>
	    <option value="zh">rsPAYMENT_PAYZEN_CHINESE</option>
	    <option value="it">rsPAYMENT_PAYZEN_ITALIAN</option>
	    <option value="ja">rsPAYMENT_PAYZEN_JAPANESE</option>
	    <option value="pt">rsPAYMENT_PAYZEN_PORTUGUESE</option>
	    <option value="nl">rsPAYMENT_PAYZEN_DUTCH</option>
	</param>
	<param name="available_languages" type="payzenmultilist" multiple="multiple" default="" label="rsPAYMENT_PAYZEN_AVAILABLES_LANGUAGES" size= "8" description="rsPAYMENT_PAYZEN_AVAILABLES_LANGUAGES_DESC">
	    <option value="">rsPAYMENT_PAYZEN_ALL</option>
	    <option value="fr">rsPAYMENT_PAYZEN_FRENCH</option>
	    <option value="de">rsPAYMENT_PAYZEN_GERMAN</option>
	    <option value="en">rsPAYMENT_PAYZEN_ENGLISH</option>
	    <option value="es">rsPAYMENT_PAYZEN_SPANISH</option>
	    <option value="zh">rsPAYMENT_PAYZEN_CHINESE</option>
	    <option value="it">rsPAYMENT_PAYZEN_ITALIAN</option>
	    <option value="ja">rsPAYMENT_PAYZEN_JAPANESE</option>
	    <option value="pt">rsPAYMENT_PAYZEN_PORTUGUESE</option>
	    <option value="nl">rsPAYMENT_PAYZEN_DUTCH</option>
	</param>
	<param name="capture_delay" type="text" size="10" default="" label="rsPAYMENT_PAYZEN_CAPTURE_DELAY" description="rsPAYMENT_PAYZEN_CAPTURE_DELAY_DESC"/>
	<param name="validation_mode" type="list" default="" label="rsPAYMENT_PAYZEN_VALIDATION_MODE" description="rsPAYMENT_PAYZEN_VALIDATION_MODE_DESC">
	    <option value="">rsPAYMENT_PAYZEN_BY_DEFAULT</option>
	    <option value="0">rsPAYMENT_PAYZEN_AUTOMATIC</option>
	    <option value="1">rsPAYMENT_PAYZEN_MANUAL</option>
	</param>
	<param name="payment_cards" type="payzenmultilist" multiple="multiple" default="" label="rsPAYMENT_PAYZEN_PAYMENT_CARDS" size= "10" description="rsPAYMENT_PAYZEN_PAYMENT_CARDS_DESC">
	    <option value="">rsPAYMENT_PAYZEN_ALL</option>
	    <option value="CB">Carte Bleue</option>
	    <option value="MASTERCARD">MasterCard</option>
	    <option value="VISA">Visa</option>
	    <option value="AMEX">American Express</option>
	</param>

	<param type="spacer" default="rsPAYMENT_PAYZEN_AMOUNT_RESTRICTIONS" level="level1" />

	<param name="min_amount" type="text" size="10" default="" label="rsPAYMENT_PAYZEN_AMOUNT_MIN" description="rsPAYMENT_PAYZEN_AMOUNT_MIN_DESC"/>
	<param name="max_amount" type="text" size="10" default="" label="rsPAYMENT_PAYZEN_AMOUNT_MAX" description="rsPAYMENT_PAYZEN_AMOUNT_MAX_DESC"/>

	<param type="spacer" default="rsPAYMENT_PAYZEN_RETURN_OPTIONS" level="level1" />

	<param name="redirect_enabled" type="radio" default="0" label="rsPAYMENT_PAYZEN_REDIRECT_ENABLED" description="rsPAYMENT_PAYZEN_REDIRECT_ENABLED_DESC">
	    <option value="0">rsPAYMENT_PAYZEN_NO</option>
	    <option value="1">rsPAYMENT_PAYZEN_YES</option>
	</param>
	<param name="redirect_success_timeout" type="text" size="10" default="5" label="rsPAYMENT_PAYZEN_REDIRECT_SUCCESS_TIMEOUT" description="rsPAYMENT_PAYZEN_REDIRECT_SUCCESS_TIMEOUT_DESC"/>
	<param name="redirect_success_message" type="text" size="50" default="Votre paiement a bien été pris en compte, vous allez être redirigé dans quelques instants." label="rsPAYMENT_PAYZEN_REDIRECT_SUCCESS_MESSAGE" description="rsPAYMENT_PAYZEN_REDIRECT_SUCCESS_MESSAGE_DESC" />
	<param name="redirect_error_timeout" type="text" size="10" default="5" label="rsPAYMENT_PAYZEN_REDIRECT_ERROR_TIMEOUT" description="rsPAYMENT_PAYZEN_REDIRECT_ERROR_TIMEOUT_DESC"/>
	<param name="redirect_error_message" type="text" size="50" default="Une erreur est survenue, vous allez être redirigé dans quelques instants." label="rsPAYMENT_PAYZEN_REDIRECT_ERROR_MESSAGE" description="rsPAYMENT_PAYZEN_REDIRECT_ERROR_MESSAGE_DESC"/>
	<param name="return_mode" type="list" default="GET" label="rsPAYMENT_PAYZEN_RETURN_MODE" description="rsPAYMENT_PAYZEN_RETURN_MODE_DESC">
	    <option value="GET">GET</option>
	    <option value="POST">POST</option>
	</param>
	<param name="url_success" type="payzenurl" size="50" default="index.php?option=com_retinashop&amp;view=pluginresponse&amp;task=pluginresponsereceived" label="rsPAYMENT_PAYZEN_URL_SUCCESS" description="rsPAYMENT_PAYZEN_URL_SUCCESS_DESC" editable="true"/>
	<param name="url_return" type="payzenurl" size="50" default="index.php?option=com_retinashop&amp;view=pluginresponse&amp;task=pluginresponsereceived" label="rsPAYMENT_PAYZEN_URL_ERROR" description="rsPAYMENT_PAYZEN_URL_ERROR_DESC" editable="true"/>
	<param name="url_cancel" type="payzenurl" size="50" default="index.php?option=com_retinashop&amp;view=pluginresponse&amp;task=pluginUserPaymentCancel" label="rsPAYMENT_PAYZEN_URL_CANCEL" description="rsPAYMENT_PAYZEN_URL_CANCEL_DESC" editable="true"/>
	<param name="silent_url" type="payzenurl" label="rsPAYMENT_PAYZEN_URL_CHECK" default="index.php?option=com_retinashop&amp;view=pluginresponse&amp;task=pluginnotification&amp;tmpl=component" editable="false"/>

	<param name="order_success_status" type="rsorderstate" scope="com_retinashop" default="C" label="rsPAYMENT_PAYZEN_ORDER_SUCCESS_STATUS" description="rsPAYMENT_PAYZEN_ORDER_SUCCESS_STATUS_DESC" />
	<param name="order_failure_status" type="rsorderstate" scope="com_retinashop" default="X" label="rsPAYMENT_PAYZEN_ORDER_FAILURE_STATUS" description="rsPAYMENT_PAYZEN_ORDER_FAILURE_STATUS_DESC" />
	<param name="debug" type="radio" default="0" label="rsPAYMENT_PAYZEN_DEBUG" description="rsPAYMENT_PAYZEN_DEBUG_DESC" >
	    <option value="0">rsPAYMENT_PAYZEN_NO</option>
	    <option value="1">rsPAYMENT_PAYZEN_YES</option>
	</param>
    </params>
</install>
