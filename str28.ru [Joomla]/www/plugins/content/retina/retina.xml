				</field>

				<field name="email_new_fe"
					type="radio"
					default="1"
					description="PLG_CONTENT_retina_FIELD_EMAIL_NEW_FE_DESC"
					label="PLG_CONTENT_retina_FIELD_EMAIL_NEW_FE_LABEL">
					<option value="0">RNO</option>
